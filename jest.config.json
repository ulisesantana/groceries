{
  "rootDir": "src",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/setupTests.ts"],
  "moduleNameMapper": {
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/tests/**",
    "!src/infrastructure/data/**",
    "!src/main.tsx",
    "!<rootDir>/node_modules/"
  ]
}
